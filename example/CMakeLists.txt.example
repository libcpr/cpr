# Example CMakeLists.txt for using cpr distributed features
cmake_minimum_required(VERSION 3.15)
project(distributed_example)

set(CMAKE_CXX_STANDARD 17)
set(CMAKE_CXX_STANDARD_REQUIRED ON)

# Find CPR library
find_package(cpr REQUIRED)

# Create executable
add_executable(distributed_example distributed_example.cpp)

# Link CPR library
target_link_libraries(distributed_example PRIVATE cpr::cpr)

# Include CPR headers
target_include_directories(distributed_example PRIVATE ${CPR_INCLUDE_DIRS})